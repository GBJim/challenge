<h1>Listing details</h1>

<table>
  <thead>
    <tr>
      <th>Public</th>
      <th>Title</th>
      <th>Description</th>
      <th>Pricenumber</th>
      <th>Priceper</th>
      <th>Whatinclude</th>
      <th>Whatexclude</th>
      <th>Durationnumber</th>
      <th>Durationunit</th>
      <th>Groupsize</th>
      <th>Availability</th>
      <th>Additionalinfo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.public %></td>
        <td><%= detail.title %></td>
        <td><%= detail.description %></td>
        <td><%= detail.priceNumber %></td>
        <td><%= detail.pricePer %></td>
        <td><%= detail.whatInclude %></td>
        <td><%= detail.whatExclude %></td>
        <td><%= detail.durationNumber %></td>
        <td><%= detail.durationUnit %></td>
        <td><%= detail.groupSize %></td>
        <td><%= detail.availability %></td>
        <td><%= detail.additionalInfo %></td>
              
        <td><%= link_to 'Show', detail %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
        <td><%= link_to 'Destroy', detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

